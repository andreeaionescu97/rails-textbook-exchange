
<body class="land-page">
<div class="d-flex">
  <div class="flex-header">
<h1 class="land-header"> Lend to others </h1>
<h2 class="land-subheader"> Become a member! </h2>
  </div>
  <div class="flex-form">
<div class="container-land d-flex flex-column">
<%= simple_form_for(@book) do |f| %>
 <div class="p-2 col-xs-2">
  <%= f.label :title, class: "land-label" %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class='p-2'>
  <%= f.label :author, class: "land-label" %>
  <%= f.text_field :author, class: "form-control" %>
</div>
<div class='p-2'>
  <%= f.label :genre, class: "land-label" %>
  <%= f.text_field :genre, class: "form-control" %>
</div>
<div class='p-2'>
  <%= f.label :condition, class: "land-label" %>
  <%= f.text_field :condition, class: "form-control" %>
</div>
<div class='p-2'>
  <%= f.label :year, class: "land-label" %>
  <%= f.number_field :year, class: "form-control" %>
</div>
<div class='p-2'>
  <%= f.label :publisher, class: "land-label" %>
  <%= f.text_field :publisher, class: "form-control" %>
</div>
<div class='p-2'>
  <%= f.label :price, class: "land-label" %>
  <%= f.number_field :price, class: "form-control" %>
</div>
<div class='p-2'>
<%= f.input :photo, as: :file %>
</div>
<div class= "p-2 justify-content-center">
  <%= f.submit :submit, class: "btn" %>
</div>
<% end %>
</div>
</div>
</div>
</body>
