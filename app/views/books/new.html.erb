<%= form_for(@book) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.label :condition %>
  <%= f.text_field :condition %>
  <%= f.label :year %>
  <%= f.number_field :year %>
  <%= f.label :publisher %>
  <%= f.text_field :publisher %>
  <%= f.submit %>
<% end %>